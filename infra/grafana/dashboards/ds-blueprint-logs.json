{
  "uid": "ds-logs",
  "title": "DS Blueprint - Logs (Loki)",
  "tags": ["distributed-systems", "logs", "loki"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "editable": true,
  "templating": {
    "list": [
      {
        "name": "container",
        "label": "Container",
        "type": "query",
        "datasource": { "type": "loki", "uid": "Loki" },
        "refresh": 1,
        "query": { "query": "label_values(container)" },
        "multi": false,
        "includeAll": false,
        "current": { "value": ".*", "text": "All" }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Live Logs (Selected Container)",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 },
      "datasource": { "type": "loki", "uid": "Loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "{container=~\"$container\"}"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "dedupStrategy": "none"
      }
    },
    {
      "id": 2,
      "type": "logs",
      "title": "Errors Only (Selected Container)",
      "gridPos": { "x": 0, "y": 10, "w": 24, "h": 10 },
      "datasource": { "type": "loki", "uid": "Loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "{container=~\"$container\"} |= \"ERROR\""
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "dedupStrategy": "none"
      }
    }
  ]
}
