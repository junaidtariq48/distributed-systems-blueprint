{
  "uid": "ds-otel-collector",
  "title": "DS Blueprint - OTEL Collector & Pipeline",
  "tags": ["distributed-systems", "otel", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Collector Up",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "refId": "A", "expr": "up{job=\"otel-collector\"}", "instant": true }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Spans Accepted (receiver) - rate",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(otelcol_receiver_accepted_spans[1m]))",
          "legendFormat": "accepted"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Spans Exported (to Tempo) - rate",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(otelcol_exporter_sent_spans[1m]))",
          "legendFormat": "sent"
        },
        {
          "refId": "B",
          "expr": "sum(rate(otelcol_exporter_send_failed_spans[1m]))",
          "legendFormat": "failed"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Receiver Refused Spans - rate (should be ~0)",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(otelcol_receiver_refused_spans[1m]))",
          "legendFormat": "refused"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Collector Process Memory (bytes)",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "process_resident_memory_bytes",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Collector CPU - rate",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(process_cpu_seconds_total[1m])",
          "legendFormat": "{{instance}}"
        }
      ]
    }
  ]
}
